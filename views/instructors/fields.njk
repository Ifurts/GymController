<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{instructor.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Full Name</div>
    <div>
        <input type="text" placeholder="Full name" name="name" value="{{instructor.name}}">
    </div>
</div>

<div class="item">
    <div>Date of birth</div>
    <div>
        <input type="date" name="birth" value="{{instructor.birth}}">
    </div>
</div>

<div class="item">
    <div>Education level</div>
    <div>
        <select name="education_level">
            <option value="secondary-school">Secondary School</option>
            <option value="certificate">Certificate</option>
            <option value="diploma">Diploma</option>
            <option value="degree">Degree</option>
            <option value="master">Master</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Class modality</div>
    <div>
        <input type="radio" value="Home-Study" name="class_modality" {% if instructor.class_modality == 'Home-Study'%} checked="checked" {% endif %}>Home Study</label>
        <input type="radio" value="presential" name="class_modality" {% if instructor.class_modality == 'presential'%} checked="checked" {% endif %}>Presential</label>
    </div>
</div>

<div class="item">
    <div>Professional practice area</div>
    <div>
        <input type="text" placeholder="Separate the areas with a
        comma" name="fit_area" value="{{ instructor.fit_area }}">
    </div>
</div>

<button type="submit">Salvar</button>