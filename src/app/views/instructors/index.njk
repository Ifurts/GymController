{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

    <div class="header">
       <a href="/instructors/create">Sign up as instructor</a>
        <form action="/instructors" method="GET">
            <input 
            type="text" 
            name="filter" 
            placeholder="Name or Fit Area"
            value={{filter}}
            >
            <button type="submit">Search</button>
        </form>
    </div>
  
    <table width = "100%">
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Fit area</th>
                <th>Students</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            {% for instructor in instructors %}
            <tr>
                <td>
                    <span style="background-image: url({{instructor.avatar_url}})"></span>
                    {{instructor.name}}</td>
                <td><span>{{instructor.fit_area}}</span></td>
                <td>{{instructor.total_students}}</td>
                <td><a href="/instructors/{{instructor.id}}">See Profile</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>


{% endblock content %}